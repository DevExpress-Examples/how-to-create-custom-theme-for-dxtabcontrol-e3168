                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="selected" Storyboard.TargetProperty="BorderThickness">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Thickness>0,1,1,1</Thickness>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="selected" Storyboard.TargetProperty="CornerRadius">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <CornerRadius>0,2,2,0</CornerRadius>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="selected" Storyboard.TargetProperty="Margin">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Thickness>-1,1,-2,0</Thickness>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="ViewModeState">
                        <VisualState x:Name="EmptyViewModeState" />
                        <VisualState x:Name="NormalViewMode">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowMain" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>Auto</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="HoldViewMode">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="borderContainer" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Collapsed</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="holdBorder" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="headerContainer" Storyboard.TargetProperty="VerticalAlignment">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <VerticalAlignment>Stretch</VerticalAlignment>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="headerContainer" Storyboard.TargetProperty="HorizontalAlignment">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <HorizontalAlignment>Stretch</HorizontalAlignment>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>

                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="gridContainer" Storyboard.TargetProperty="Margin">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Thickness>0,2,0,2</Thickness>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>

                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowFoneUp" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>0</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowFoneBottom" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>0</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="ScrollViewMode">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="headerContainer" Storyboard.TargetProperty="VerticalAlignment">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <VerticalAlignment>Stretch</VerticalAlignment>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="headerContainer" Storyboard.TargetProperty="HorizontalAlignment">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <HorizontalAlignment>Stretch</HorizontalAlignment>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>

                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowFoneUp" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>0</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowFoneBottom" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>0</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rowMain" Storyboard.TargetProperty="Height">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <GridLength>*</GridLength>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <dx:HeaderContainerPresenter x:Name="headerContainerPresenter">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="rowFoneUp" Height="*" />
                            <RowDefinition x:Name="rowMain" Height="*" />
                            <RowDefinition x:Name="rowFoneBottom" Height="*" />
                        </Grid.RowDefinitions>
                        <Border x:Name="foneUpNormal" Grid.Row="0" BorderThickness="1,0,1,0" Margin="0,1,1,0" IsHitTestVisible="False" Opacity="1" 
                                Background="{StaticResource FoneUpNormalBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Border x:Name="foneUpHover" Grid.Row="0" BorderThickness="1,0,1,0" Margin="0,1,1,0" IsHitTestVisible="False" Opacity="0" 
                                Background="{StaticResource FoneUpHoverBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Border x:Name="foneUpSelected" Grid.Row="0" BorderThickness="1,0,1,0" Margin="0,1,1,0" IsHitTestVisible="False" Opacity="0" 
                                Background="{StaticResource FoneUpSelectedBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Border x:Name="foneBottomNormal" Grid.Row="2" BorderThickness="1,0,1,0" Margin="0,0,1,1" IsHitTestVisible="False" Opacity="1" 
                                Background="{StaticResource FoneBottomNormalBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Border x:Name="foneBottomHover" Grid.Row="2" BorderThickness="1,0,1,0" Margin="0,0,1,1" IsHitTestVisible="False" Opacity="0" 
                                Background="{StaticResource FoneBottomHoverBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Border x:Name="foneBottomSelected" Grid.Row="2" BorderThickness="1,0,1,0" Margin="0,0,1,1" IsHitTestVisible="False" Opacity="0" 
                                Background="{StaticResource FoneBottomSelectedBackground}" BorderBrush="{StaticResource BorderBrush}" />
                        <Grid Grid.Row="1">
                            <Grid x:Name="borderContainer">
                                <Border x:Name="normal" BorderThickness="1,1,1,0" CornerRadius="2,2,0,0" Margin="0,0,1,0" Opacity="1" 
                                        Background="{StaticResource NormalBackground}" BorderBrush="{StaticResource BorderBrush}" />
                                <Border x:Name="hover" BorderThickness="1,1,1,0" CornerRadius="2,2,0,0" Margin="0,0,1,0" Opacity="0"
                                        Background="{StaticResource HoverBackground}" BorderBrush="{StaticResource BorderBrush}" />
                                <Border x:Name="selected" BorderThickness="1,1,1,0" CornerRadius="2,2,0,0" Margin="0,-2,1,-1" Opacity="0"
                                        Background="{StaticResource SelectedBackground}" BorderBrush="{StaticResource BorderBrush}" />
                            </Grid>
                            <Grid x:Name="holdBorder" Visibility="Collapsed">
                                <Border x:Name="holdBorderNormal" BorderThickness="1" Margin="1,1,0,0" Opacity="1" 
                                        CornerRadius="2"
                                        Background="{StaticResource NormalBackground}" BorderBrush="{StaticResource BorderBrush}" />
                                <Border x:Name="holdBorderHover" BorderThickness="1" Margin="1,1,0,0" Opacity="0"
                                        CornerRadius="2"
                                        Background="{StaticResource HoverBackground}" BorderBrush="{StaticResource BorderBrush}" />
                                <Border x:Name="holdBorderSelected" BorderThickness="1" Margin="1,1,0,0" Opacity="0"
                                        CornerRadius="2"
                                        Background="{StaticResource SelectedBackground}" BorderBrush="{StaticResource BorderBrush}" />
                            </Grid>
                            <Grid x:Name="gridContainer">
                                <Grid x:Name="headerContainer" Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <dx:HeaderIconPresenter x:Name="headerIconPresenter" IsTabStop="False" Grid.Column="0" Content="{TemplateBinding Icon}" IconWidth="{TemplateBinding IconWidth}" IconHeight="{TemplateBinding IconHeight}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,4,0" Visibility="Collapsed" />
                                    <dx:DXContentPresenter x:Name="headerNormal" IsTabStop="False" Grid.Column="2" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" VerticalAlignment="Center" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                                    <Button IsTabStop="False" x:Name="closeButton" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed" Template="{StaticResource CloseButtonTemplate}" Margin="7,1,-4,0" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </dx:HeaderContainerPresenter>
            </Grid>
        </ControlTemplate>
        
        <Style TargetType="{x:Type dx:DXTabItem}" BasedOn="{StaticResource {x:Type dx:DXTabItem}}">
            <Setter Property="Template" Value="{StaticResource tabItemTemplate}" />
        </Style>
    </Window.Resources>
    <Grid x:Name="LayoutRoot" Background="Black">
        <dx:DXTabControl Background="#FF4B4B4B" Margin="100" BorderBrush="White">
            <dx:DXTabItem Header="Header1" Foreground="White" />
            <dx:DXTabItem Header="Header2" Foreground="White" />
            <dx:DXTabItem Header="Header3" Foreground="White" />
        </dx:DXTabControl>
    </Grid>
</Window>
